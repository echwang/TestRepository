<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
        android:id="@+id/photoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="center_vertical"
        />
     
        <TextView 
            android:id="@+id/dataItem01_detail"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textSize="16dp"
	        android:padding="4dp"
	        android:layout_below="@id/photoItem"
	        android:layout_centerVertical="true"
	        />

        <TextView
            android:id="@+id/dataItem02_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataItem01_detail"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" />

        <TextView 
            android:id="@+id/dataItem03_detail"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:textColor="#ccf88107"
	        android:textStyle="bold"
	        android:textSize="16dp"
	        android:paddingRight="4dp"
	        android:layout_below="@id/dataItem02_detail"
        	/>        
        
</RelativeLayout>
